package com.time.task.sleep;

public class SleepTask {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		final long timeInterval = 1000;   //1s Ö´ÐÐÒ»´Î
		Runnable runnable = new Runnable(){
